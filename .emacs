;(require 'ecb)
(defun programming-general ()
  "General settings for programming major mode."
  (linum-mode t)			; Line numbers on
  (flycheck-mode t)			; on-the-fly syntax checking
  (company-mode t)			; auto-complete
  (semantic-mode t)			; semantic
  (global-ede-mode t)
  (tabbar-mode t)
  (font-lock-mode t)
  (show-paren-mode t)
  (highlight-indentation-mode t)
  ;(helm-gtags-mode t)
  (display-fill-column-indicator-mode t)
  )

;; org
(add-hook 'org-mode-hook
	  (lambda ()
	    (org-indent-mode t)))

;; Emacs Lisp
(add-hook 'emacs-lisp-mode-hook
	  (lambda ()
	    (programming-general)))

;; VHDL
(add-hook 'vhdl-mode-hook
          (lambda ()
            (programming-general)))

;; C
(add-hook 'c-mode-hook
	  (lambda ()
	    (programming-general)
	    (setq flycheck-clang-language-standard "gnu99")
	    (setq flycheck-gcc-language-standard "gnu99")))

;; C++
(add-hook 'c++-mode-hook
	  (lambda ()
	    (programming-general)
	    (setq flycheck-clang-language-standard "gnu++17")
	    (setq flycheck-gcc-language-standard "gnu++17")))

;; Java
(add-hook 'java-mode-hook
	  (lambda ()
	    (programming-general)))

;; Python
(add-hook 'python-mode-hook
	  (lambda ()
	    (programming-general)
	    (highlight-indentation-mode nil)
	    (elpy-mode 1)))

;; Cython
(add-hook 'cython-mode-hook
	  (lambda ()
	    (programming-general)))

;; JavaScript
(add-hook 'javascript-mode-hook
          (lambda ()
            (programming-general)))

